header
	width 100%
	height 80px
	background-color red
	border-bottom 3px solid white
	color white
	margin-bottom 30px
	h1
		float left
		margin 8px 0 0 40px
		font-size 60px
	.nav
		float right
		padding-top 20px
		margin-right 40px
		li>a
			transition all 600ms cubic-bezier(0.19, 1, 0.22, 1)
			color white
			border-color white
			font-size 20px
			margin-top 8px
			&:hover
				background-color transparent
				color white
				font-size 26px
				margin-top 0
			&.active
				text-decoration none
				background-color white
				color black
				font-size 26px
				margin-top 0



